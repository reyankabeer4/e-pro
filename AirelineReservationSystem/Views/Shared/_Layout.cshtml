<style>
    #bo-container {
        display: grid;
        grid-template-columns: repeat(4, 1fr); /* 4 equal columns */
        grid-auto-rows: 200px; /* every row 200px fixed height */
        gap: 16px; /* space between cards */
        padding: 16px; /* space around the whole grid */
        background: #f5f5f5; /* light background to show cards nicely */
    }

    .best-offers {
        background: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
        padding: 8px; /* inner space inside card */
    }

    .best-offers img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 6px; /* slight curve on images */
        flex-grow: 1;
    }

    .card-content {
        padding-top: 8px;
        text-align: center;
    }

    .p-title {
        font-size: 1.1rem;
        margin: 0;
        color: #333;
    }

    /* Different card sizes */
    .wide {
        grid-column: span 2; /* span 2 columns */
    }

    .tall {
        grid-row: span 2; /* span 2 rows */
    }

    .big {
        grid-column: span 2;
        grid-row: span 2; /* span 2x2 */
    }
</style>

<div id="bo-container">
