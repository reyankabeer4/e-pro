@{
    ViewData["Title"] = "Profile Page";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-color: #edf2f4;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #0b132b;
            color: white;
            position: fixed;
            padding-top: 20px;
        }

            .sidebar h2 {
                margin-left: 20px;
                font-size: 24px;
            }

            .sidebar a {
                display: flex;
                align-items: center;
                color: white;
                padding: 15px 20px;
                text-decoration: none;
                font-size: 16px;
            }

                .sidebar a i {
                    margin-right: 10px;
                }

                .sidebar a:hover {
                    background-color: #34495e;
                }

                .sidebar a.active {
                    background-color: #edf2f4;
                    color: black;
                    border-radius: 50px 0 0 50px;
                }

        .content {
            margin-left: 250px;
            padding: 20px;
        }

        .form{
            display:flex;
            justify-content:center;
            align-items:center;
            flex-direction:column;
            gap:20px;

        }

        form input{
            width:400px;
            padding:10px;
            border-radius:5px;
            border: 1px solid lightgrey;
            outline:none;
            transition: .5s ease;
        }

        form input:focus{
            border:1px solid blue;

        }



    </style>
</head>
<body>
    <div class="sidebar">
        <h2 class="my-3">User Dashboard</h2>
        <a asp-controller="User" asp-action="Dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
        <a asp-controller="User" asp-action="Profile" class="active"><i class="fas fa-user"></i> Profile</a>
        <a href="#"><i class="fas fa-ticket-alt"></i>  Bookings</a>
        <a href="#"><i class="fas fa-headset"></i> Support</a>
        <a href="#"><i class="fas fa-sign-out-alt"></i>Logout</a>
    </div>
    <div class="content">
        <div class="card p-3 shadow-sm">
        
            <div>
                <p class="p-2"><a asp-controller="User" asp-action="Profile" class="text-decoration-none">Profile ></a> Go to Account Setting</p>

