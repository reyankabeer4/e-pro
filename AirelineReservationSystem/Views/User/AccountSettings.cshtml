@{
    ViewData["Title"] = "Profile Page";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-color: #edf2f4;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #0b132b;
            color: white;
            position: fixed;
            padding-top: 20px;
        }

            .sidebar h2 {
                margin-left: 20px;
                font-size: 24px;
            }

            .sidebar a {
                display: flex;
                align-items: center;
                color: white;
                padding: 15px 20px;
                text-decoration: none;
                font-size: 16px;
            }

                .sidebar a i {
                    margin-right: 10px;
                }

                .sidebar a:hover {
                    background-color: #34495e;
                }

                .sidebar a.active {
                    background-color: #3498db;
                }

        .content {
            margin-left: 250px;
            padding: 20px;
        }

            .content h1 {
                font-size: 24px;
                color: #2c3e50;
                margin-bottom: 20px;
            }

        .overview {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }

        .overview-card {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            flex: 1;
            text-align: center;
        }

            .overview-card i {
                font-size: 24px;
                color: #3498db;
                margin-bottom: 10px;
            }

            .overview-card h3 {
                margin: 0;
                color: #3498db;
            }

            .overview-card p {
                margin: 10px 0 0;
                color: #7f8c8d;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #3498db;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        tr:hover {
            background-color: #e9ecef;
        }

        .status-pending {
            color: red;
        }

        .status-delivered {
            color: green;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h2 class="my-3">User Portal</h2>
        <a asp-controller="User" asp-action="Dashboard" class="active"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
        <a asp-controller="User" asp-action="Profile"><i class="fas fa-user"></i> Profile</a>
        <a href="#"><i class="fas fa-shopping-cart"></i> Orders</a>
        <a href="#"><i class="fas fa-user"></i> Bookings</a>
        <a href="#"><i class="fas fa-headset"></i> Support</a>
        <a href="#" style=""><i class="fas fa-headset"></i> Logout</a>
    </div>
    <div class="content">
        <h1>Welcome, User</h1>

        <div>
            <h1>Profile Update</h1>

            <a asp-controller="Home" asp-action="AccountSettings"><a asp-controller="User" asp-action="Profile">Profile ></a> Go to Account Setting</a>
            <input type="text" placeholder="Name" value="User"/>
                <input type="text" placeholder="Email" value="user@gmail.com"/>
                <input type="text" placeholder="Phone" value="1234567890"/>
                <input type="text" placeholder="Address" value="Karachi, Pakistan" />
            <button class="btn btn-outline-primary">Update Profile</button>
        </div>
    </div>
</body>
</html>