                <form method="post" class="form">
                    @Html.AntiForgeryToken()
                    <h1 class="text-center h3">Profile Update</h1>
                    <input type="text" placeholder="Name" name="FirstName" value="@Model.FirstName" />
                    <input type="text" placeholder="Name" name="LastName" value="@Model.LastName" />
                    <input type="email" placeholder="Email" name="Email" value="@Model.Email" />
                    <input type="text" placeholder="Phone" name="PhoneNumber" value="@Model.PhoneNumber" />
                    <input type="text" placeholder="Address" name="Address" value="@Model.Address" />
                    <button type="submit" class="btn btn-outline-primary">Update Profile</button>
                </form>


            </div>
        </div>
    </div>
</body>
</html>