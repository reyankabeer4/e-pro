@model List<AirelineReservationSystem.Models.Booking>;

@{
    ViewData["Title"] = "User Dashboard";
   var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-color: #edf2f4;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #0b132b;
            color: white;
            position: fixed;
            padding-top: 20px;
        }

            .sidebar h2 {
                margin-left: 20px;
                font-size: 24px;
            }

            .sidebar a {
                display: flex;
                align-items: center;
                color: white;
                padding: 15px 20px;
                text-decoration: none;
                font-size: 16px;
            }

                .sidebar a i {
                    margin-right: 10px;
                }

                .sidebar a:hover {
                    background-color: #34495e;
                }

                .sidebar a.active {
                    background-color: #edf2f4;
                    color: black;
                    border-radius: 50px 0px 0px 50px;
                }

        .content {
            margin-left: 250px;
            padding: 20px;
        }

            .content h1 {
                font-size: 24px;
                color: #2c3e50;
                margin-bottom: 20px;
            }

        .overview {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }

        .overview-card {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            flex: 1;
            text-align: center;
        }

            .overview-card i {
                font-size: 24px;
                color: #3498db;
                margin-bottom: 10px;
            }

            .overview-card h3 {
                margin: 0;
                color: #3498db;
            }

            .overview-card p {
                margin: 10px 0 0;
                color: #7f8c8d;
            }

       

        .status-pending {
            color: red;
        }

        .status-delivered {
            color: green;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h2 class="my-3">User Dashboard</h2>
        <a asp-controller="User" asp-action="Dashboard" class="@(currentAction == "Dashboard" && currentController == "User" ? "active" : "")">
            <i class="fas fa-tachometer-alt"></i> Dashboard
        </a>
        <a asp-controller="User" asp-action="Profile" class="@(currentAction == "Profile" && currentController == "User" ? "active" : "")">
            <i class="fas fa-user"></i> Profile
        </a>
        <a href="#"><i class="fas fa-ticket-alt"></i> Bookings</a>
        <a href="#"><i class="fas fa-headset"></i> Support</a>
        <a href="#"><i class="fas fa-sign-out-alt"></i></i> Logout</a>
    </div>
    <div class="content">
        <h1>Welcome, User</h1>
        <div class="overview">
            <div class="overview-card">
                <i class="fas fa-users"></i>
                <h3>5</h3>
                <p>Total Orders</p>
            </div>
            <div class="overview-card">
                <i class="fas fa-dollar-sign"></i>
                <h3>$150.00</h3>
                <p>Total Spent</p>
            </div>
            <div class="overview-card">
                <i class="fas fa-clock"></i>
                <h3>2</h3>
                <p>Pending Orders</p>
            </div>
        </div>
        <table class="table">
                <thead style="background-color:#1d2b3c">

            <tr class="p-3" style="background-color:#1d2b3c">
                <th>Booking ID</th>
                <th>Full Name</th>
                <th>Flight Name</th>
                <th>Date</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
                </thead>
            <tbody>


            @foreach (var booking in Model)
            {
            <tr>
                <td>@booking.BookingId</td>
                <td>
                    @foreach (var passenger in booking.Passengers)
    {
                    <div>@passenger.FullName</div>
    }
                </td>

                <td>@booking.Flight.AirlineName</td>  
                <td>@booking.BookingDate</td>
                <td>$@booking.TotalAmount</td>
                <td class="@(booking.Status == "Pending" ? "status-pending" : "status-delivered")">@booking.Status</td>
                <td><button class="btn btn-danger">Cancel Booking</button></td>
            </tr>
            }
            </tbody>


        </table>
    </div>
</body>
</html> 

