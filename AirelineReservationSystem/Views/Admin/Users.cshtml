@model IEnumerable<AirelineReservationSystem.Models.User>

@{
    ViewData["Title"] = "User Page";
    var serialNo = 1;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <style>
        .active-nav {
            background-color: #5f1899;
            padding: 10px 0;
            border-radius: 5px;
            color: white;
        }

        .sideBar {
            width: 300px;
            background-color: #f0f0f0;
        }

        .shadow-sm {
            box-shadow: 10px 10px 10px 10px grey;
        }
       

        .tb-pf{
            height:50px;
            width:50px;
            border-radius:50%;
            object-fit:cover;
        }

    </style>
</head>
<body class="m-0 p-0">
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sideBar d-flex flex-column p-3">
            <a href="" class="text-decoration-none h2 my-2">ARS</a>
            <ul class="navbar-nav gap-3">
                <li class="nav-item p-2">
                    <a asp-controller="Admin" asp-action="Dashboard" class="nav-link">Dashboard</a>
                </li>

                <li class="nav-item p-2">
                    <a class="nav-link" data-bs-toggle="collapse" data-bs-target="#extraMenu" role="button" aria-expanded="false" aria-controls="extraMenu">
                        Flights
                    </a>
                    <div class="collapse ps-3" id="extraMenu">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a asp-controller="Admin" asp-action="Flight" class="nav-link">Add Flights</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Admin" asp-action="ShowFlight" class="nav-link">Show Flights</a>
                            </li>

                        </ul>
                    </div>
                </li>
                <li class="nav-item p-2">
                    <a asp-controller="Admin" asp-action="Bookings" class="nav-link">Bookings</a>
                </li>
                <li class="nav-item p-2 active-nav">
                    <a asp-controller="Admin" asp-action="Users" class="nav-link">Users</a>
                </li>


                <li class="nav-item p-2"><a href="" class="nav-link">Layout</a></li>
                <li class="nav-item p-2"><a href="" class="nav-link">Sign Out</a></li>
            </ul>
        </div>
        <!-- Main content -->
        <div class="mainContent bg-light p-5">
            <div class="container shadow-sm">

            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>User Id</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Gender</th>
                        <th>Role</th>
                        <th>Profile Pic</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var user in Model){

                    <tr>
                        <td style="color:grey;">@serialNo</td>
                        @{
                            serialNo++;
                        }
                        <td>@user.UserId</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@user.Sex</td>
                        <td>@user.Role</td>
                        <td><img src="@user.ProfilePic" class="tb-pf" alt="" /></td>
                    </tr>
                    }
                </tbody>
            </table>


            </div>
        </div>
    </div>
            <footer class="bg-dark text-white text-center py-3 mt-auto">
                © 2025 Your Website. All rights reserved.
            </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



