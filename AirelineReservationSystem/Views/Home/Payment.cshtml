@{
    ViewData["Title"] = "Payment Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Payment Method</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
    <style>
        * {
            box-sizing: border-box;
            font-family: 'Montserrat', sans-serif;
        }

        .card-container {
            background: url('https://images.unsplash.com/photo-1506744038136-46273834b3fb') no-repeat center center/cover;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 90vh;
        }

        .card {
            background: white;
            border-radius: 15px;
            width: 320px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            overflow: hidden;
        }

        .card-header {
            padding: 25px;
            text-align: center;
            border-bottom: 1px solid #eee;
        }

        .dots {
            display: flex;
            justify-content: center;
            gap: 6px;
            margin-bottom: 10px;
        }

            .dots span {
                width: 8px;
                height: 8px;
                border-radius: 50%;
                background: #d3dbe4;
            }

                .dots span.active {
                    background: #6c7ae0;
                }

        .card-header h2 {
            margin: 0;
            font-size: 16px;
            letter-spacing: 1px;
            font-weight: 600;
        }

        .option {
            display: flex;
            align-items: center;
            padding: 15px 20px;
            border-bottom: 1px solid #eee;
            cursor: pointer;
        }

            .option:hover {
                background: #f5f7fa;
            }

            .option img {
                width: 32px;
                margin-right: 15px;
            }

            .option span {
                flex: 1;
                font-weight: 500;
                color: #555;
                text-transform: uppercase;
            }

            .option.selected span {
                font-weight: 700;
                color: #000;
            }

        .checkmark {
            color: green;
            font-weight: bold;
        }

        .card-footer {
            background: #4f7df9;
            padding: 20px;
            text-align: center;
            color: white;
            font-weight: bold;
            cursor: pointer;
            letter-spacing: 1px;
            width: 100%;
            border: none;
        }

            .card-footer:hover {
                background: #3a60c9;
            }
    </style>
</head>
<body>
    <div class="content">
        @if (TempData["Error"] != null)
        {
        <div class="alert alert-danger" role="alert" id="errorAlert">
            @TempData["Error"]
        </div>
        }
        @if (TempData["Success"] != null)
        {
        <div class="alert alert-success" role="alert" id="successAlert">
            @TempData["Success"]
        </div>
        }
    </div>

    <div class="card-container">
        <div class="card">
            <div class="card-header">
                <h2>PAYMENT METHOD</h2>
            </div>

            <div class="option">
                <img src="https://img.icons8.com/color/48/000000/visa.png" alt="Visa">
                <span>Visa Card</span>
            </div>
            <div class="option">
                <img src="https://img.icons8.com/color/48/000000/stripe.png" alt="Stripe">
                <span>Stripe</span>
            </div>

            <div class="option">
                <img src="https://img.icons8.com/ios-filled/50/4caf50/cash.png" alt="Cash">
                <span>Cash Payment</span>
                <span class="checkmark">✔</span>
            </div>


            <form method="post">
                @Html.AntiForgeryToken()
                <input type="text" name="paymentMethod" value="Cash On Delivery" hidden />
                <input type="submit" class="card-footer" value="Pay Now ($100)" />
            </form>



        </div>
    </div>

    @section Scripts {
        <script>
            // Auto-hide alerts after 3 seconds
            window.onload = function () {
                setTimeout(function () {
                    var errorAlert = document.getElementById('errorAlert');
                    var successAlert = document.getElementById('successAlert');

                    if (errorAlert) {
                        errorAlert.style.transition = "opacity 0.5s ease";
                        errorAlert.style.opacity = 0;
                        setTimeout(() => errorAlert.remove(), 500);
                    }

                    if (successAlert) {
                        successAlert.style.transition = "opacity 0.5s ease";
                        successAlert.style.opacity = 0;
                        setTimeout(() => successAlert.remove(), 500);
                    }
                }, 3000);
            };
        </script>
    }
</body>
</html>
