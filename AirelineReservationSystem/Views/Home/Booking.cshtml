@model AirelineReservationSystem.Models.Flight;

@{
    ViewData["Title"] = "Booking Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Booking Page</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <style>

        .breadcrumb {
            background: transparent;
            justify-content: center;
            padding: 0;
            margin-top: 10px;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            color: #fff;
        }

        .customer-details-section {
            background-color: #fff;
            padding: 2rem;
            border-top: 4px solid #730f1d;
        }

        .step-tracker {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 60px;
            margin-top: 20px;
        }

        .step {
            text-align: center;
            position: relative;
        }

            .step .circle {
                width: 36px;
                height: 36px;
                line-height: 36px;
                border-radius: 50%;
                background-color: #ffcc00;
                color: #730f1d;
                font-weight: bold;
                display: inline-block;
                margin-bottom: 5px;
            }

        .step-title {
            font-weight: 500;
            color: #5c1e2d;
        }

        .step::after {
            content: '';
            position: absolute;
            top: 18px;
            left: 100%;
            width: 60px;
            height: 2px;
            background-color: #ddd;
            z-index: -1;
        }

        .step:last-child::after {
            display: none;
        }

        .warning-message {
            color: #0b132b;
            font-weight: 600;
            margin-top: 1rem;
            font-size: 25px;
            text-align: center;
        }

        /* Booking Section */
        .booking-section {
            padding: 3rem 1rem;
            background-color: #f9f9f9;
        }

        .booking-form .card-header,
        .booking-info h6 {
            background-color: #0b132b;
            color: white;
            border-radius: 6px 6px 0 0;
            padding: 0.75rem 1rem;
        }

        .form-select, .form-control {
            margin-bottom: 1rem;
        }

        .payment-icons img {
            width: 40px;
            margin-right: 10px;
        }

        .price-summary td {
            padding: 4px 0;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
            margin-bottom: 2rem;
        }


        .input-group-text {
            background-color: #f0f0f0;
        }

       

        /* Header */
        .booking-header {
            background: url('https://images.unsplash.com/photo-1573164713347-df1e86a68272?ixlib=rb-4.0.3&auto=format&fit=crop&w=1350&q=80') no-repeat center center/cover;
            color: white;
            padding: 80px 0;
            text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.4);
        }

            .booking-header h1 {
                font-size: 3.2rem;
                font-weight: 700;
            }

        /* Steps */
        .step .circle {
/*            background-color:;*/
            background-color: #0b132b;
            color: white;
        }

        .step:hover .circle {
            transform: scale(1.1);
            background-color: #0b134b;
        }

        .step-title {
            font-size: 0.95rem;
            font-weight: 600;
            color: #0b132b;
        }

        /* Cards */
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
/*            transition: transform 0.2s ease;*/
        }

            

        .card-header {
            font-size: 1.1rem;
            font-weight: 600;
            color:white;
            background-color: #0b132b;
        }

        /* Form Elements */
        .form-select,
        .form-control {
            border-radius: 8px;
            box-shadow: none !important;
            padding:10px;
        }

        .input-group-text {
            background-color: #fff;
            border-right: 0;
        }

  

        .btn-primary {
            background-color: #730f1d;
            border-color: #730f1d;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #5c0c17;
            }

        

        /* Payment Icons */
        .payment-icons img {
            width: 36px;
            transition: transform 0.2s ease;
            cursor: pointer;
        }

            .payment-icons img:hover {
                transform: scale(1.2);
            }

        /* Footer */
        .card-footer {
            border-top: none;
        }

        /* Price Table */
        .price-summary td {
            font-size: 0.95rem;
        }

        tr {
            padding: 10px
        }
    </style>
</head>
<body>

    <!-- Header Section -->
    <div style="height:40vh; width:100%; position:relative; display:flex; justify-content:center;align-items:center;  overflow:hidden">
        <img src="~/images/sky.jpg" style="height:auto; width:100%; object-fit:cover" alt="booking image" />
        <h1 style="position: absolute; top:100px;">Booking Details</h1>

    </div>

    <!-- Customer Info + Step Tracker -->
    <div class="customer-details-section">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <p class="warning-message">Customer Details: Please fill in with valid information.</p>
                </div>
            </div>

            <div class="step-tracker">
                <div class="step">
                    <div class="circle">1</div>
                    <div class="step-title">Guest Information</div>
                </div>
                <div class="step">
                    <div class="circle">2</div>
                    <div class="step-title">Payment</div>
                </div>
                <div class="step">
                    <div class="circle">3</div>
                    <div class="step-title">Confirmation</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Booking Section -->
    <div class="container booking-section">
        <div class="row">
            <!-- Booking Form -->
            <div class="col-md-8">
                <div class="card booking-form">
                    <div class="card-header">
                        Book Your Ticket
                    </div>
                    <div class="card-body">
                        <form asp-action="Booking" asp-controller="User" method="post">
                            @Html.AntiForgeryToken()

                            <input type="hidden" name="flightId" value="@Model.FlightId" />

                            <input type="text" class="form-control" name="fullName" placeholder="Full Name" required />
                            <input type="text" class="form-control" name="age" placeholder="Enter Your Age" required />
                            <input type="text" class="form-control" name="gender" placeholder="Male/Female" required />
                            <input type="text" class="form-control" name="passportNumber" placeholder="e.g.X12345678" required />

                            <button type="submit" class="btn " style="background-color:#0b132b ;color:white">Book Now</button>
                        </form>

                    </div>
                </div>
            </div>

            <!-- Booking Info Sidebar -->
            <div class="col-md-4">
                <div class="card booking-info">
                    <div class="card-header">
                        Booking Info
                    </div>
                    <div class="card-body">
                        @{
    var departureTime = Model.DepartureTime.HasValue ? Model.DepartureTime.Value.ToString("h:mm tt") : "N/A";
    var arrivalTime = Model.ArrivalTime.HasValue ? Model.ArrivalTime.Value.ToString("h:mm tt") : "N/A";
                        }
                        <p><strong style="font-size:18px ; padding:0px 0">@Model.Source-@Model.Destination</strong><br><small> @departureTime-@arrivalTime</small></p>

                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Enter Discount Code">
                            <button class="" style="background-color: #0b132b; color:white; border:none;">Apply</button>
                        </div>

                        <h6 class="mt-4">Your Preferred Bank</h6>
                        <div class="payment-icons mb-3">
                            @*<img src="https://img.icons8.com/color/48/000000/paypal.png" class="payment-logo" style="height: 50px; width: auto;" title="PayPal" />*@
                            @*<img src="https://img.icons8.com/color/48/000000/visa.png" class="payment-logo" style="height: 50px; width: auto;" title="Visa" />*@
                            @*<img src="https://img.icons8.com/color/48/000000/mastercard.png" class="payment-logo" style="height: 50px; width: auto;" title="MasterCard" />*@
                            @*<img src="https://img.icons8.com/color/48/000000/hsbc.png" class="payment-logo" style="height: 50px; width: auto;" title="HSBC" />*@
                            @*<img src="https://img.icons8.com/color/48/000000/ebay.png" class="payment-logo" style="height: 50px; width: auto;" title="eBay" />*@
                            @*<img src="https://img.icons8.com/color/48/000000/western-union.png" title="Western Union" />*@
                            <img src="https://img.icons8.com/color/48/000000/paypal.png" class="payment-logo selectable-payment" data-method="PayPal" title="PayPal" />
                            <img src="https://img.icons8.com/color/48/000000/visa.png" class="payment-logo selectable-payment" data-method="Visa" title="Visa" />
                            <img src="https://img.icons8.com/color/48/000000/stripe.png" class="payment-logo selectable-payment" data-method="Visa" title="Visa" />

                        </div>

                        <h6 class="mt-4">Price Summary</h6>
                        <table class="table price-summary">
                            <tbody>
                                <tr class="p-2"><td class="p-2">Adult x 1</td><td class="text-end">$@Model.Price</td></tr>
                                @*<tr class="p-2"><td class="p-2">Tax x 1</td><td class="text-end">$35</td></tr>*@
                                @*<tr class="p-2"><td class="p-2">Total Airfare:</td><td class="text-end">$1,091</td></tr>*@
                                @*<tr class="p-2"><td class="p-2">Discount</td><td class="text-end text-danger">- $110</td></tr>*@
                                <tr class="p-2"><td class="p-2"><strong>Final Price</strong></td><td class="text-end"><strong>$@Model.Price</strong></td></tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer bg-light text-end">
                        <input type="hidden" name="paymentMethod" id="paymentMethod" value="Cash on Delivery" />

                        <a asp-action="Payment" asp-controller="Home" asp-route-id="@Model.FlightId" class="btn btn-primary btn-rounded" style="background-color:#0b132b">
                            Proceed to Payment
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelectorAll('.form-control, .form-select').forEach(el => {
            el.addEventListener('focus', () => {
                el.style.boxShadow = '0 0 0 0.2rem rgba(115,15,29,0.25)';
            });
            el.addEventListener('blur', () => {
                el.style.boxShadow = 'none';
            });
        });


            let selectedPayment = null;

        document.querySelectorAll('.selectable-payment').forEach(img => {
                img.addEventListener('click', () => {
                    // Clear previous selection styles
                    document.querySelectorAll('.selectable-payment').forEach(el => {
                        el.style.border = 'none';
                        el.style.filter = 'grayscale(100%)';
                    });

                    // Highlight selected
                    img.style.border = '2px solid #730f1d';
                    img.style.filter = 'none';

                    // Update hidden input
                    const method = img.getAttribute('data-method');
                    document.getElementById('paymentMethod').value = method;
                    selectedPayment = method;
                });

            // Set default style
            img.style.cursor = 'pointer';
            img.style.filter = 'grayscale(100%)';
        });

            // Optional: confirm the default if user submits without selecting
            document.querySelector('form').addEventListener('submit', function () {
            if (!selectedPayment) {
                document.getElementById('paymentMethod').value = 'Cash on Delivery';
            }
        });


    </script>

</body>
</html>



