@model IEnumerable<AirelineReservationSystem.Models.Flight>


    @{
    ViewData["Title"] = "Booking Page";

    }



    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Flight Booking UI</title>
        <style>

            .header {
                background-color: #0052cc;
                color: white;
                padding: 20px;
                text-align: center;
            }

                .header a {
                    color: #f5c518;
                    text-decoration: none;
                    margin: 0 10px;
                }

            .tabs {
                display: flex;
                justify-content: center;
                background-color: #b3245e;
            }

            .tab {
                padding: 15px 30px;
                color: white;
                cursor: pointer;
                display: flex;
                align-items: center;
                gap: 10px;
            }

                .tab.active {
                    background-color: #f5c518;
                    color: black;
                }

                .tab img {
                    width: 20px;
                    filter: brightness(0) invert(1); /* For white icons */
                }

                .tab.active img {
                    filter: none; /* For black icons in active tab */
                }

            .content {
                max-width: 1200px;
                margin: 20px auto;
                background-color: white;
                padding: 20px;
                border-radius: 8px;
                box-shadow: 1px 1px 10px rgba(0, 0, 0, 0.1);
            }

            .trip-options {
                display: flex;
                gap: 20px;
                margin-bottom: 20px;
            }

                .trip-options label {
                    display: flex;
                    align-items: center;
                    gap: 5px;
                    cursor: pointer;
                }

                .trip-options input[type="radio"] {
                    width: 20px;
                    height: 20px;
                }

                    .trip-options input[type="radio"]:checked + span {
                        color: #f5c518;
                        font-weight: bold;
                    }

            .form-grid {
                display: grid;
                grid-template-columns: repeat(4, 1fr);
                gap: 20px;
                margin-bottom: 20px;
            }

                .form-grid input, .form-grid select {
                    width: 100%;
                    padding: 10px;
                    border: 1px solid #ccc;
                    border-radius: 4px;
                    box-sizing: border-box;
                }

                .form-grid .swap-icon {
                    text-align: center;
                    font-size: 20px;
                    color: #666;
                }

            .buttons {
                display: flex;
                justify-content: flex-end;
                gap: 10px;
            }

                .buttons button {
                    padding: 10px 20px;
                    border: none;
                    border-radius: 4px;
                    cursor: pointer;
                }

            .promo-btn {
                background-color: white;
                border: 1px solid #f5c518;
                color: #f5c518;
            }

            .show-flights-btn {
                background-color: #f5c518;
                color: black;
                display: flex;
                align-items: center;
                gap: 5px;
            }

                .show-flights-btn img {
                    width: 20px;
                }

            .row {
                display: flex;
                gap: 20px;
                margin: 20px;
                flex-wrap: wrap;
            }

            .sidebar {
                flex: 0 0 25%;
                max-width: 300px;
                background-color: white;
                padding: 20px;
                border-radius: 8px;
                box-shadow: 1px 1px 10px rgba(0,0,0,0.1);
            }

            .main-section {
                flex: 1;
                min-width: 0;
            }

            .flight-card {
                background-color: white;
                padding: 20px;
                margin-bottom: 20px;
                border-radius: 8px;
                box-shadow: 1px 1px 10px rgba(0,0,0,0.1);
                display: flex;
                justify-content: space-between;
                align-items: center;
            }
        </style>
    </head>
    <body>
        <div class="header">
            <h1>Booking List</h1>
            <a href="#">Home</a> <span>|</span> <a href="#" style="color: #f5c518;">Booking List</a>
        </div>
        <div class="tabs">
            <div class="tab active">
                <img src="https://img.icons8.com/ios-filled/50/airplane-take-off.png" alt="Airplane Icon">
                AIR BOOKING
            </div>
            <div class="tab">
                <img src="https://img.icons8.com/ios-filled/50/suitcase.png" alt="Suitcase Icon">
                MY TRIPS
            </div>
            <div class="tab">
                <img src="https://img.icons8.com/ios-filled/50/check.png" alt="Check Icon">
                CHECK-IN
            </div>
            <div class="tab">
                <img src="https://img.icons8.com/ios-filled/50/pin.png" alt="Pin Icon">
                FLIGHT STATUS
            </div>
        </div>
        <div class="content">
            <div class="trip-options">
                <label>
                    <input type="radio" name="trip-type" value="roundtrip">
                    <span>Roundtrip</span>
                </label>
                <label>
                    <input type="radio" name="trip-type" value="one-way">
                    <span>One-way</span>
                </label>
                <label>
                    <input type="radio" name="trip-type" value="multi-city" checked>
                    <span>Multi-city</span>
                </label>
            </div>
            <div class="form-grid">
                <div>
                    <label>From</label>
                    <input type="text" placeholder="From">
                </div>
                <div class="swap-icon">↔</div>
                <div>
                    <label>To</label>
                    <input type="text" placeholder="To">
                </div>
                <div>
                    <label>Trip type</label>
                    <select>
                        <option>Tour type</option>
                    </select>
                </div>
                <div>
                    <label>Depart</label>
                    <input type="date" value="2025-02-05">
                </div>
                <div>
                    <label>Return</label>
                    <input type="date" value="2025-02-05">
                </div>
                <div>
                    <label>Passenger/Class</label>
                    <input type="text" value="1 Passenger, Economy" readonly>
                </div>
            </div>
            <div class="buttons">
                <button class="promo-btn">+ ADD PROMO CODE</button>
                <button class="show-flights-btn">
                    SHOW FLIGHTS
                    <img src="https://img.icons8.com/ios-filled/50/airplane-take-off.png" alt="Airplane Icon">
                </button>
            </div>
        </div>

        <div class="row">
            <!-- Sidebar Filters -->
            <aside class="sidebar">
                <h2 class="text-xl font-semibold mb-4">Filters</h2>
                <div class="mb-6">
                    <h3 class="font-medium mb-2">Price Range</h3>
                    <input type="range" min="1000" max="4500" class="w-full">
                    <p class="mt-1">Price: <span class="font-semibold text-red-600">$1000 - $4500</span></p>
                    <button class="mt-2" style="background-color:#b3245e;color:white;padding:6px 12px;border:none;border-radius:4px;">Filter</button>
                </div>
                <div>
                    <h3 class="font-medium mb-2">Departure Time</h3>
                    <div style="display:grid;grid-template-columns:1fr 1fr;gap:10px;">
                        <div class="bg-gray-100 p-2 rounded text-center">00:00 - 05:59</div>
                        <div class="bg-gray-100 p-2 rounded text-center">06:00 - 11:59</div>
                        <div class="bg-gray-100 p-2 rounded text-center">12:00 - 17:59</div>
                        <div class="bg-gray-100 p-2 rounded text-center">18:00 - 23:59</div>
                    </div>
                </div>
            </aside>

            <!-- Airline Cards -->
            <section class="main-section">
                @foreach(var flights in Model){
                <div class="flight-card">
                    <div style="display:flex;gap:20px;align-items:center;">
                        <img src="https://upload.wikimedia.org/wikipedia/en/thumb/e/e8/Etihad_Airways_Logo.svg/1280px-Etihad_Airways_Logo.svg.png" alt="Etihad" style="width:50px;height:50px;">
                        <div>
                            <h3 class="text-lg font-semibold">@flights.AirlineName</h3>
                            <p class="text-sm text-gray-500">Operated by Emirates</p>
                        </div>
                    </div>
                    <div style="text-align:center;">
                        <p class="font-semibold">Thursday, Jun 16</p>
                        <p class="text-lg font-bold">12:55</p>
                        <p class="text-sm">22h • 2 Stops</p>
                        <p class="text-xs text-gray-400">DAC</p>
                    </div>
                    <div style="text-align:right;">
                        <p class="text-xl font-bold" style="color:red;">US$ 1,056.40</p>
                        <button style="margin-top:8px;background-color:#f5c518;padding:8px 12px;border:none;border-radius:4px;">Select ✈️</button>
                        <p class="text-xs text-gray-500 mt-1">Incl. taxes & fees</p>
                    </div>
                </div>


            }
            </section>
        </div>


    </body>
</html>


