        #bo-container {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            grid-auto-rows: 200px;
            gap: 20px;
            padding: 50px;
        }

        .best-offers {
            border-radius: 10px;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            position: relative;
        }

        .image-wrapper {
            position: relative;
            width: 100%;
            height: 100%;
        }

        .best-offers img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 5px;
            transition: transform 0.5s;
        }

        .best-offers:hover img {
            transform: scale(1.05);
        }

        .overlay {
            position: absolute;
            bottom: -100%;
            left: 0;
            right: 0;
            background: rgba(0, 0, 0, 0.6);
            color: white;
            padding: 15px;
            text-align: center;
            font-weight: bold;
            transition: bottom 0.5s ease;
            border-bottom-left-radius: 5px;
            border-bottom-right-radius: 5px;
        }

        .best-offers:hover .overlay {
            bottom: 0;
        }

        .wide {
            grid-column: span 2;
        }

        .tall {
            grid-row: span 2;
        }

        .big {
            grid-column: span 2;
            grid-row: span 2;
        }





